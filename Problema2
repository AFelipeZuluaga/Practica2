#include <iostream>
using namespace std;

int main (){
        /* Problema 2. Haga una función que compare 2 cadenas de caracteres y retorno un valor lógico verdadero si son
            iguales y falso en caso contrario, no olvide también tener en cuenta la longitud de las cadenas. Escriba un programa
            de prueba.
        */
    bool k=1;            //k será 0 cuando no sean iguales
    char cadena1[]="no quiero";
    char cadena2[]="no queero";
    int i;
    int j;

    for(i=0; cadena1[i]!='\0'; i++){   //i+1 resultará siendo la longitud de cadena 1
    }

    for(j=0; cadena2[j]!='\0'; j++){    //j+1 resultará siendo la longitud de cadena2
    }

    if(i!=j){
        k=0;
    }
    else{
        for(int it=0; it<i ; it++){
                if(cadena1[it]!=cadena2[it]){
            k=0;
        }
    }
    }
        if(k==0){
            cout<<"falso"<<endl;
        }
        else{
            cout<<"verdadero"<<endl;
        }
return 0;
}
